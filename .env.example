# =====================================================
# AI English Studio - Environment Configuration
# =====================================================
# Copy this file to .env and modify the values
# =====================================================

# ============== Core Settings ==============

# PostgreSQL database password (will be auto-generated if empty)
POSTGRES_PASSWORD=your-super-secret-password

# JWT secret for authentication (will be auto-generated if empty)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# ============== Port Configuration ==============

# PostgreSQL port
POSTGRES_PORT=5432

# Kong API Gateway port
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# Frontend application port
FRONTEND_PORT=3000

# ============== URL Configuration ==============

# External API URL (change for production)
API_EXTERNAL_URL=http://localhost:8000

# Frontend site URL (change for production)
SITE_URL=http://localhost:3000

# Additional redirect URLs (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# ============== Auth Configuration ==============

# Disable signup (set to true to require invitation codes)
DISABLE_SIGNUP=false

# Enable email signup
ENABLE_EMAIL_SIGNUP=true

# Auto-confirm email (set to false in production with SMTP)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable phone signup
ENABLE_PHONE_SIGNUP=true

# Auto-confirm phone (set to false in production with SMS)
ENABLE_PHONE_AUTOCONFIRM=true

# JWT token expiry in seconds (default: 1 hour)
JWT_EXPIRY=3600

